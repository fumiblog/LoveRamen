<div class="container">
    <div class="row">
        <%= form_with model: @user, url: users_user_path(@user), local: true do |f| %>
        <h3><%= current_user.name %>さんの情報</h3>
        <div class="table table-striped">
            <tr><td>好きな種類を選んでね：</td><td><%= f.collection_select :genre_id, @genres, :id, :name, include_blank: "応援する種類を選択してください" %></td></tr></br>
            <tr><td>ネーム：</td><td><%= f.text_field :name, placeholder: "ニックネームでもいいよ", style: "border: none" %></td></tr></br>
            <tr><td>メール：</td><td><%= f.email_field :email, placeholder: "変えてもいいよ", style: "border: none" %></td></tr></br>
            <%= f.submit "分類や内容を変える" %>
            <%= link_to "やっぱ変えん", users_user_path(@user)  %>
        </div>
        </div>
        <% end %>
    </div>
</div>