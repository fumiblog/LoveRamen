<div class="container">
    <div class="row">
        <h2>会員一覧</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>名前</th>
                    <th>email</th>
                    <th>応援する種類</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <% @users.each do |user| %>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td>
                        <% if user.genre_id == nil %>
                            無し
                        <% else %>
                            <%= user.genre.name %>
                        <% end %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>