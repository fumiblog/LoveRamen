<div class="container">
    <div class="row">
        <h3>ラーメン分類(genre)</h3></br></br>
        <%= form_with model: @genre, url: admins_genres_path, local: true do |f| %>
        <div class="genrenew">
            新ラーメン分類
            <%= f.text_field :name %>
            <%= f.submit '追加', class: 'btn btn-primary' %>
        </div>
        <% end %>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">ラーメン分類</th>
                    <th scope="col"></th>
                    <th scope="col"></th></th>
                </tr>
            </thead>
            <tbody>
                <% @genres.each do |genre| %>
                <tr>
                    <td scope="row"><%= genre.name %></td>
                    
                    <td><%= link_to "編集", admins_genres_path, class: "btn btn-success" %></td>
                    <td><%#= link_to "削除", admins_genres_path, method: :delete, data: { confirm: "本当に削除しますか？商品も削除されます！"}, class: "btn btn-danger" %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>